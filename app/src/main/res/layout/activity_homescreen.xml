<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/homebackgro"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="log.bewell.login.MainActivity">

    <TextView
        android:id="@+id/user_welcome"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView20"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Welcome,user"
        android:textColor="@color/colorPrimaryDark" />


    <Button
        android:id="@+id/caloriebtn"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/soundbtn"
        android:background="@drawable/circle"
        android:drawableTop="@drawable/meal"
        android:text="Calorie Counter"
        android:textSize="12sp"
        android:textStyle="bold|italic" />


    <Button
        android:id="@+id/soundbtn"
        android:layout_width="90dp"
        android:layout_height="90dp"

        android:layout_alignTop="@+id/workoutbtn"
        android:layout_centerHorizontal="true"
        android:background="@drawable/circle"
        android:drawableTop="@drawable/meditationicon"
        android:text="Relaxation Sound"
        android:textSize="12sp"
        android:textStyle="bold|italic" />

    <!--<Button-->
        <!--android:id="@+id/supportbtn"-->

        <!--android:layout_width="90dp"-->
        <!--android:layout_height="90dp"-->
        <!--android:layout_alignTop="@+id/hseBtn"-->
        <!--android:layout_toStartOf="@+id/caloriebtn"-->
        <!--android:background="@drawable/circle"-->
        <!--android:drawableTop="@drawable/help"-->
        <!--android:text="Support Services "-->
        <!--android:textSize="12sp"-->
        <!--android:textStyle="bold|italic" />-->

    <Button
        android:id="@+id/testingbtn"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignBaseline="@+id/hseBtn"
        android:layout_alignBottom="@+id/hseBtn"
        android:layout_alignEnd="@+id/change_password"
        android:background="@drawable/circle"
        android:drawableTop="@drawable/questionsicon"
        android:text="QUIZ"
        android:textSize="12sp"
        android:textStyle="bold|italic" />
        <!--android:layout_alignTop="@+id/supportbtn"-->
        <!--android:layout_toStartOf="@+id/supportbtn"-->


    <Button
        android:id="@+id/workoutbtn"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignTop="@+id/caloriebtn"
        android:layout_toStartOf="@+id/soundbtn"
        android:background="@drawable/circle"
        android:drawableTop="@drawable/logoworkout"
        android:text="Workout"
        android:textSize="12sp"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/hseBtn"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignStart="@+id/workoutbtn"
        android:layout_below="@+id/soundbtn"
        android:layout_marginStart="23dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/circle"
        android:drawableTop="@drawable/iconhelp"
        android:text="Support Services "
        android:textSize="12sp"
        android:textStyle="bold|italic" />
        <!--android:layout_toEndOf="@+id/supportbtn"-->


    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView26"
        android:layout_marginTop="15dp"
        android:fontFamily="serif"
        android:text="Welcome to BeWell.\nBeWell app highlighted the HSEâ€™s The Little Things campaign focusing on people with self-care problem. "
        android:textAlignment="center"
        android:textColor="@color/cast_expanded_controller_background_color"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/soundbtn"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="13dp"
        android:fontFamily="serif"
        android:text="Select the section you want:"
        android:textAllCaps="false"
        android:textColor="@color/cast_expanded_controller_background_color"
        android:textStyle="bold" />

    <Button
        android:id="@+id/logoutid"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView25"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="13dp"
        android:text="Logout"
        android:textColor="@color/colorPrimaryDark" />
        <!--android:background="@drawable/circle"-->
        <!--android:textColor="@android:color/holo_orange_light" />-->

    <Button
        android:id="@+id/change_password"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="100dp"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/logoutid"
        android:text="Change Password"
        android:textColor="@color/colorPrimaryDark" />

    <TextView
        android:id="@+id/textView26"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Menu Main"
        android:textColor="#32CD32"
        android:textSize="30sp"
        android:textStyle="bold" />
    <!--android:background="@drawable/circle"/>-->


</RelativeLayout>















































