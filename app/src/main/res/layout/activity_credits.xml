<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background_dotted"
    tools:context="log.bewell.login.CreditsActivity">

    <ImageView
        android:id="@+id/c_header_image"
        android:layout_width="200sp"
        android:layout_height="40sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/credits" />

    <TextView
        android:id="@+id/thank_you_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/c_header_image"
        android:text="@string/thank_you1"
        android:textColor="#ffffff"
        android:textSize="18dip"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/thank_you_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dip"
        android:layout_below="@+id/thank_you_text"
        android:text="@string/thank_you2"
        android:textColor="#ffffff"
        android:textSize="15dip"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/thank_you_text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/thank_you_text2"
        android:layout_centerHorizontal="false"
        android:layout_margin="5dip"
        android:text="abdulazeez-yusuff@hotmail.com@gmail.com"
        android:textColor="#ffffff"
        android:textSize="15dip"
        android:textStyle="bold" />

</RelativeLayout>
